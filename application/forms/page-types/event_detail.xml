<?xml version="1.0" encoding="UTF-8"?>
<form i18nBaseUri="page-types.event_detail:">

	<tab id="event_detail">
		<fieldset id="event_detail">
			<field binding="event_detail.start_date" />
			<field binding="event_detail.end_date" />
			<field binding="event_detail.bookable" />
			<field binding="event_detail.price" default='0' />
			<field binding="event_detail.total_seats" default='0' />
			<field binding="event_detail.session" />
			<field binding="event_detail.regions" quickAdd="true" quickEdit="true" sortable="true" />
			<field binding="event_detail.category" quickAdd="true" quickEdit="true" sortable="true" />
			<field binding="event_detail.programmes" />
			<field binding="event_detail.document" allowtypes="pdf" maxFileSize="512" multiple="false"/>
		</fieldset>
	</tab>
</form>